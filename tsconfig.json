{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "public",
        "baseUrl": ".",
        "paths": {
            "@booring/*": [ "./src/core/*" ]
        },
        "strict": true,
        "alwaysStrict": true
    },
    "typedocOptions": {
        "entryPoints": [ 
            "./src/core"
        ],
        "entryPointStrategy": "expand",
        "out": "doc"
    },
    "include": [
        "./src/**/*.ts"
    ]
}